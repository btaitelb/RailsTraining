<%= simple_form_for(@weather_reading) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :temperature %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :icon_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
